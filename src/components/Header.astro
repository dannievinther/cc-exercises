---
import ViewSingleIcon from "../icons/view-single.svg";
import GridIcon from "../icons/grid2.svg";
import SubgridIcon from "../icons/subgrid2.svg";
import FlexboxIcon from "../icons/flex.svg";
import SdaIcon from "../icons/sda2.svg";
import AboutPopup from "./AboutPopup.astro";
import BrowserAlert from "./BrowserAlert.astro";
const { hasWarning, title } = Astro.props;

// current pathname from Astro

const linkItems = [
  { href: "/grid", text: "Grid", icon: GridIcon },
  { href: "/subgrid", text: "Subgrid", icon: SubgridIcon },
  { href: "/flex", text: "Flexbox", icon: FlexboxIcon },
  { href: "/sda", text: "Scroll", icon: SdaIcon, separator: true },
];

// const allViewURL = Astro.url.pathname.replace(/\/\d+$/, "");

const containsDigitAfterSlash =
  Astro.url.pathname.replace(/\/$/, "").match(/\/\d+$/) !== null;
---

<header class="main-header">
  <div class="header-content">
    <a href="/" class="logo"
      ><span>CSS<span>xs</span></span><span class="dev">.dev</span></a
    >
    <nav>
      <ul>
        {
          linkItems.map((item, i) => (
            <li class:list={[{ separator: item.separator }]}>
              <a
                interestfor={`nav-tooltip-${i}`}
                data-astro-prefetch
                style={`view-transition-name: --current-link-text-${i};`}
                aria-current={
                  Astro.url.pathname.replace(/\/$/, "").startsWith(item.href)
                    ? "page"
                    : undefined
                }
                href={item.href}
              >
                <span class="nav-icon">
                  <item.icon width={16} height={16} stroke-width={2} />
                </span>
                <span class="nav-label">{item.text}</span>
              </a>
              <span popover id={`nav-tooltip-${i}`} class="tooltip">
                {item.text}
              </span>
            </li>
          ))
        }
      </ul>
    </nav>
    <div class="utils">
      <AboutPopup class="about-button" />
      <div class="view">
        {
          !containsDigitAfterSlash && (
            <a href={Astro.url.pathname.replace(/\/$/, "") + "/1"}>
              <ViewSingleIcon width={20} height={20} />
            </a>
          )
        }
      </div>
    </div>
  </div>
</header>

