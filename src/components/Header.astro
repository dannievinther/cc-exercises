<style>
  @keyframes --fade {
    to {
      /* translate: calc(100% + var(--space-1)); */
      opacity: 0;
      scale: 0.5;
      translate: 0 -35%;
    }
  }

  .tooltip[popover] {
    margin: 0;
    color: #333;
    padding: 0.3rem 0.5rem;
    border-radius: 0.3rem;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
    font-size: 80%;
    font-weight: 500;
    position-area: bottom;
    margin-block: 1cap;
    border: 1px solid rgba(0, 0, 0, 0.15);
    interest-delay: 0.2s;
  }

  .header-content:has(:interest-source) a {
    interest-delay-start: 0s;
  }

  .view {
    a {
      background: #fffc;
      backdrop-filter: blur(4px);
      border-radius: 1e5px;
      padding: var(--space-1);
      box-shadow:
        0 0 0 1px rgba(0, 0, 0, 0.08),
        0px 2px 2px rgba(0, 0, 0, 0.04);

      &:hover {
        background: oklch(from currentcolor 95% 0 h);
      }
      &:active {
        scale: 0.97;
      }
    }

    svg {
      display: block;
    }
  }

  .utils {
    > :not([popover]) {
      display: none;
      @supports (animation-timeline: scroll(root)) {
        display: flex;
        gap: 10px;
        transform-origin: 50% 0;

        animation: --fade ease-in-out both;
        animation-timeline: scroll(root);
        animation-range: 0 60px;
        @media (width <= 768px) {
          display: none;
        }
      }
    }
  }
  nav {
    grid-column: 2;
    display: flex;
    justify-content: center;

    background: #fffc;
    view-transition-name: nav-background;
    -webkit-backdrop-filter: blur(4px);
    backdrop-filter: blur(4px);
    border-radius: 1e5px;
    padding: var(--space-1);
    box-shadow:
      0 0 0 1px rgba(0, 0, 0, 0.08),
      0px 2px 2px rgba(0, 0, 0, 0.04);

    ul {
      display: flex;
      gap: 0.3ch;
      list-style-type: "";
      line-height: 1.25;

      li {
        &.separator {
          position: relative;

          &::before {
            content: "";
            position: absolute;
            inset-inline-start: -1.5px;
            inset-block: 0.4em;
            width: 1px;
            background: var(--gray-400);
          }
        }
      }

      a {
        position: relative;
        display: flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-1) var(--space-4);
        justify-self: start;
        color: var(--active, var(--gray-800));
        border-radius: 1e5px;
        font-weight: 500;
        font-size: 0.9rem;
        text-decoration: none;
        line-height: 1.25;
        transition: 0.15s;
        view-transition-class: current-link-text;

        position: relative;
        isolation: isolate;

        &[aria-current]::before {
          content: "";
          position: absolute;
          inset: 0;
          inset-inline-start: 0.2ch;
          border-radius: 1e5px;
          background: var(--gray-1000);
          transition: 0.15s;
          z-index: -1;
          view-transition-name: --current-link;
        }

        .nav-icon {
          display: grid;
        }

        &:not([aria-current="page"]) .nav-label {
          display: none;
        }

        &[aria-current] {
          --active: var(--gray-1000);
          /* background: var(--gray-1000); */
          color: var(--gray-100);
          /* anchor-name: --current; */
        }

        &:hover:not([aria-current]) {
          color: var(--gray-1000);
        }
      }
    }
  }

  .main-header {
    position: relative;
    display: grid;
    grid: auto/minmax(var(--space-5), 1fr) minmax(auto, 1200px) minmax(
        var(--space-5),
        1fr
      );
    gap: var(--space-5) 0;

    margin-block: var(--space-5);

    margin-block-end: var(--space-7);

    position: sticky;
    inset-block-start: var(--space-5);
    z-index: 10;

    &::before {
      content: none;
      position: absolute;
      inset: 0;
      background: #fff;
      z-index: -1;
      transform: skew(0deg, -1deg);
      transform-origin: 0 0;
      box-shadow:
        rgb(255 255 255) 0px 0px 0px 0px,
        rgb(51 65 85 / 10%) 0px 0px 0px 1px,
        rgb(0 0 0 / 5%) 0px 20px 25px -5px,
        rgb(0 0 0 / 5%) 0px 8px 10px -6px;
    }

    .header-content {
      display: grid;
      grid: auto / 1fr auto 1fr;
      align-items: center;
    }
    .utils {
      grid-column-end: -1;
      display: flex;
      gap: 1ch;
      flex-flow: wrap;
      justify-content: flex-end;
    }

    & > * {
      grid-column: 2;
    }
  }

  .alert {
    width: fit-content;
    /* margin: -2rem auto 3rem; */
    margin: auto;
    padding: 1rem;
    background: oklch(0.98 0.08 22.38);
    border-radius: var(--bdrs-l);
    border: 2px solid oklch(0.75 90% 29.62);

    &::backdrop {
      background: oklch(0.28 0.03 22.38 / 0.9);
    }

    > p {
      color: oklch(0.3 0.14 29.24);
      font-size: 0.9rem;
    }

    .dialog-close {
      background: #fff;
      box-shadow:
        0 0 0 1px #00000014,
        0 2px 2px #0000000a;
      border-radius: var(--bdrs-round);
      padding: 0.15rlh 0.5rlh;

      &:hover {
        background: oklch(from currentcolor 95% 0 h);
      }
      &:active {
        scale: 0.97;
      }
    }
  }

  @supports (position-area: span-all span-start) {
    .alert {
      display: none;
    }
  }

  .exercise-logo {
    max-width: min-content;
    padding: 0.8rem;
    border: 5px double #dedee0;
    border-radius: 1e5px;
    color: var(--blue-700);
    background:
      radial-gradient(#fff 0 0) content-box,
      hsl(209deg 27% 93%) padding-box;
    aspect-ratio: 1;
  }

  .exercise-logo svg {
    display: block;
  }

  .logo {
    --elastic: 0.9s
      linear(
        0,
        0.218 2.1%,
        0.862 6.5%,
        1.114,
        1.296 10.7%,
        1.346,
        1.37 12.9%,
        1.373,
        1.364 14.5%,
        1.315 16.2%,
        1.032 21.8%,
        0.941 24%,
        0.891 25.9%,
        0.877,
        0.869 27.8%,
        0.87,
        0.882 30.7%,
        0.907 32.4%,
        0.981 36.4%,
        1.012 38.3%,
        1.036,
        1.046 42.7% 44.1%,
        1.042 45.7%,
        0.996 53.3%,
        0.988,
        0.984 57.5%,
        0.985 60.7%,
        1.001 68.1%,
        1.006 72.2%,
        0.998 86.7%,
        1
      );
    font-family: flex;
    font-size: 1.6rem;
    letter-spacing: 0.03em;
    line-height: 1;
    font-weight: 700;
    width: fit-content;
    > :first-child {
      font-variation-settings:
        "wdth" 400,
        "HGHT" 500;
      color: var(--gray-1000);
      display: inline flex;
      align-items: baseline;
      margin-block-start: -0.3em;
      cursor: pointer;
      text-decoration: none;
      transform: skewY(-5deg);
      transition: var(--elastic);
      .logo:hover & {
        transform: skewY(0deg);
      }
      span {
        color: var(--ui-primary-border);
        color: oklch(from var(--ui-primary-border) 0.7 0.2 h);
      }
    }

    .dev {
      display: inline-block;
      font-size: 0.65em;
      font-variation-settings:
        "wdth" 350,
        "HGHT" 500;
      color: var(--gray-700);
      clip-path: inset(0 100% 0 0);
      transition: 0.3s clip-path;

      .logo:hover & {
        clip-path: inset(0);
      }
    }
  }
</style>
