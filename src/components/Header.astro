<style>
  @keyframes --fade {
    to {
      /* translate: calc(100% + var(--space-1)); */
      opacity: 0;
      scale: 0.5;
      translate: 0 -35%;
    }
  }

  .view {
    a {
      background: #fffc;
      backdrop-filter: blur(4px);
      border-radius: 1e5px;
      padding: var(--space-1);
      box-shadow:
        0 0 0 1px rgba(0, 0, 0, 0.08),
        0px 2px 2px rgba(0, 0, 0, 0.04);

      &:hover {
        background: oklch(from currentcolor 95% 0 h);
      }
      &:active {
        scale: 0.97;
      }
    }

    svg {
      display: block;
    }
  }

  .utils {
    > :not([popover]) {
      display: none;
      @supports (animation-timeline: scroll(root)) {
        display: flex;
        gap: 10px;
        transform-origin: 50% 0;

        animation: --fade ease-in-out both;
        animation-timeline: scroll(root);
        animation-range: 0 60px;
        @media (width <= 768px) {
          display: none;
        }
      }
    }
  }
  nav {
    grid-column: 2;
    display: flex;
    justify-content: center;

    background: #fffc;
    -webkit-backdrop-filter: blur(4px);
    backdrop-filter: blur(4px);
    border-radius: 1e5px;
    padding: var(--space-1);
    box-shadow:
      0 0 0 1px rgba(0, 0, 0, 0.08),
      0px 2px 2px rgba(0, 0, 0, 0.04);

    ul {
      display: flex;
      gap: 0.3ch;
      list-style-type: "";
      line-height: 1.25;
      a {
        position: relative;
        display: flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-1) var(--space-4);
        justify-self: start;
        color: var(--active, var(--gray-800));
        border-radius: 1e5px;
        font-weight: 500;
        font-size: 0.9rem;
        text-decoration: none;
        line-height: 1.25;
        transition: 0.15s;

        position: relative;
        isolation: isolate;

        &[aria-current]::before {
          content: "";
          position: absolute;
          inset: 0;
          border-radius: 1e5px;
          background: var(--gray-1000);
          transition: 0.15s;
          z-index: -1;
          view-transition-name: --current-link;
        }

        &[aria-current] {
          --active: var(--gray-1000);
          /* background: var(--gray-1000); */
          color: var(--gray-100);
          /* anchor-name: --current; */
        }

        &:hover:not([aria-current]) {
          color: var(--gray-1000);
        }
      }
    }
  }

  .main-header {
    position: relative;
    display: grid;
    grid: auto/minmax(var(--space-5), 1fr) minmax(auto, 1200px) minmax(
        var(--space-5),
        1fr
      );
    gap: var(--space-5) 0;

    margin-block: var(--space-5);

    margin-block-end: var(--space-7);

    position: sticky;
    inset-block-start: var(--space-5);
    z-index: 10;

    &::before {
      content: none;
      position: absolute;
      inset: 0;
      background: #fff;
      z-index: -1;
      transform: skew(0deg, -1deg);
      transform-origin: 0 0;
      box-shadow:
        rgb(255 255 255) 0px 0px 0px 0px,
        rgb(51 65 85 / 10%) 0px 0px 0px 1px,
        rgb(0 0 0 / 5%) 0px 20px 25px -5px,
        rgb(0 0 0 / 5%) 0px 8px 10px -6px;
    }

    .header-content {
      display: grid;
      grid: auto / 1fr auto 1fr;
      align-items: center;
    }
    .utils {
      grid-column-end: -1;
      display: flex;
      gap: 1ch;
      flex-flow: wrap;
      justify-content: flex-end;
    }

    & > * {
      grid-column: 2;
    }
  }

  .alert {
    width: fit-content;
    /* margin: -2rem auto 3rem; */
    margin: auto;
    padding: 1rem;
    background: oklch(0.98 0.08 22.38);
    border-radius: var(--bdrs-l);
    border: 2px solid oklch(0.75 90% 29.62);

    &::backdrop {
      background: oklch(0.28 0.03 22.38 / 0.9);
    }

    > p {
      color: oklch(0.3 0.14 29.24);
      font-size: 0.9rem;
    }

    .dialog-close {
      background: #fff;
      box-shadow:
        0 0 0 1px #00000014,
        0 2px 2px #0000000a;
      border-radius: var(--bdrs-round);
      padding: 0.15rlh 0.5rlh;

      &:hover {
        background: oklch(from currentcolor 95% 0 h);
      }
      &:active {
        scale: 0.97;
      }
    }
  }

  @supports (position-area: span-all span-start) {
    .alert {
      display: none;
    }
  }

  .exercise-logo {
    max-width: min-content;
    padding: 0.8rem;
    border: 5px double #dedee0;
    border-radius: 1e5px;
    color: var(--blue-700);
    background:
      radial-gradient(#fff 0 0) content-box,
      hsl(209deg 27% 93%) padding-box;
    aspect-ratio: 1;
  }

  .exercise-logo svg {
    display: block;
  }
</style>
