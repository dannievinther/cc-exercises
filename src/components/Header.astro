<dialog class="alert">
  <script is:inline>
    const supportsPositionAnchor = CSS.supports(
      "position-area: span-all span-start"
    );
    if (!supportsPositionAnchor) {
      document.currentScript.closest("dialog")?.showModal();
    }
  </script>
  <p>
    <strong>OBS:</strong> Øvelserne virker pt. ikke optimalt i denne browser.
  </p>
  <form method="dialog">
    <button class="dialog-close">OK</button>
  </form>
</dialog>

