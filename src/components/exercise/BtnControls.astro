---
import Button from "./Button.astro";
---

<div class="controls">
  <div>
    <Button icon="minus">Fjern boks</Button>
    <span role="presentation"></span>
    <Button icon="plus">Tilf√∏j boks</Button>
  </div>
</div>

<style>
  @layer components {
    .controls {
      display: grid;
      grid: auto / repeat(auto-fit, minmax(min(400px, 100%), 1fr));
      gap: 0 var(--space-6);
      justify-items: end;
      align-self: end;
      grid-column: 1 / -1;

      &::after {
        content: "";
      }

      button {
        color: var(--gray-1000);
      }

      > div {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        grid-column: -2;
        /* background:
          linear-gradient(#fff 0%, #e9eef4 100%) padding-box,
          #fff;
        box-shadow:
          rgb(255 255 255) 0px 0px 0px 0px,
          rgb(51 65 85 / 10%) 0px 0px 0px 1px,
          rgb(0 0 0 / 5%) 0px 20px 25px -5px,
          rgb(0 0 0 / 5%) 0px 8px 10px -6px; */
        /* background: var(--ui-surface); */
        background: hsl(209deg 15% 97%);
        box-shadow: var(--shadow-ui);
        border-radius: var(--bdrs-round);
        padding: 0.25rem;

        > span[role="presentation"] {
          /* font-weight: 600;
          font-size: 0.75rem; */
          padding: 0.2rem 1rem;
          font-family: var(--font-mono);
          border-radius: 2px;
          background-color: var(--ui-primary);
          box-shadow: 0 0 0 1px var(--ui-primary-border);
        }
      }
    }
    @media (hover: hover) {
      span[role="presentation"] {
        :not([disabled]):hover + & {
          background: #0000;
          filter: grayscale(1);
          box-shadow: none;
          outline: 1.5px dashed var(--gray-500);
          transition-property: background, box-shadow;
          &::before {
            opacity: 0;
          }
        }
      }

      span[role="presentation"]:has(+ :not([disabled]):hover) {
        translate: 0 100%;
        &::before {
          translate: 0 -200%;
        }
      }

      span[role="presentation"] {
        position: relative;
        translate: none;
        z-index: 1;
        transition:
          0.25s translate,
          0.25s scale;
      }

      span[role="presentation"]::before {
        content: "";
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        background: inherit;
        border-radius: inherit;
        translate: inherit;
        box-shadow: inherit;
        transform-origin: 50% 0%;
        z-index: -1;
        filter: grayscale(1);
        transition: inherit;
      }
    }
  }
</style>
