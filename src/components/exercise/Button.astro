---
import MinusIcon from "../../icons/minus.svg";
import PlusIcon from "../../icons/plus.svg";
const { icon } = Astro.props;
---

<button type="button" class={icon}>
  {
    icon === "minus" ? (
      <MinusIcon stroke-width={2} width={28} height={28} />
    ) : (
      <PlusIcon stroke-width={2} width={28} height={28} />
    )
  }
</button>

<style>
  @layer components {
    button {
      border-radius: var(--bdrs-round);
    }
    button:not([disabled]) {
      /* background:
        linear-gradient(#fff 0%, #e9eef4 100%) padding-box,
