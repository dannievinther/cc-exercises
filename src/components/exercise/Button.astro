---
import { Icon } from "astro-icon/components";
const { icon } = Astro.props;
---

<button type="button" class={icon}>
  <!-- <svg aria-hidden="true" width="18" height="18" fill="none" stroke="var(--btn-icon, currentColor)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <use href={`#${icon}`}></use>
    </svg> -->
  {
    icon === "minus" ? (
      <Icon name="minus" stroke-width={2} width={28} height={28} fill="none" />
    ) : (
      <Icon name="plus" stroke-width={2} width={28} height={28} fill="none" />
    )
  }
  <!-- <span><slot /></span> -->
</button>

<style>
  @layer components {
    button:not([disabled]) {
      /* background:
        linear-gradient(#fff 0%, #e9eef4 100%) padding-box,
        #fff;
      box-shadow:
        rgb(255 255 255) 0px 0px 0px 0px,
        rgb(51 65 85 / 10%) 0px 0px 0px 1px,
        rgb(0 0 0 / 5%) 0px 20px 25px -5px,
        rgb(0 0 0 / 5%) 0px 8px 10px -6px; */
      background: transparent;
      border-radius: var(--bdrs-round);
      transition: 0s;
      overflow: clip;
      padding: 0;
    }
    button:not([disabled]):active {
      background:
        linear-gradient(#fff 0%, #fff 100%) padding-box,
        #fff;
      box-shadow:
        rgb(255 255 255) 0px 0px 0px 0px,
        rgb(51 65 85 / 10%) 0px 0px 0px 1px,
        rgb(0 0 0 / 5%) 0px 0px 0px 0px,
        rgb(0 0 0 / 5%) 0px 0px 0px 0px;
    }
    button :global(svg) {
    }

    [disabled]:is(.plus, .minus) {
      /* --ui-accent: var(--blue-muted-comment); */
      opacity: 0.5;
      cursor: not-allowed;
    }

    :is(.plus, .minus) {
      box-shadow: none;
      /* padding: 0.25rem 0.5rem; */
      padding: 0;
    }

    [astro-icon] {
      color: var(--btn-icon, var(--ui-secondary));
      width: 1.1rem;
      height: 1.1rem;
      scale: 1.1;
      opacity: 0.5;
    }
  }
</style>
