      transition: 0s;
      overflow: clip;
      padding: 0;

      &:hover {
        background: oklch(from var(--ui-primary) 0.98 0.01 h);
        box-shadow: 0 0 0 1px var(--ui-primary-border);
      }
    }
    button:not([disabled]):active {
      /* background: var(--gray-300); */
      scale: 0.97;
      /* background:
      linear-gradient(#fff 0%, #fff 100%) padding-box,
      #fff;
