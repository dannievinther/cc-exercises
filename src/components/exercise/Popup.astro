---

<details class="popup">
  <summary>
    <CodeIcon stroke-width={1.5} width={22} height={22} />
    HTML
  </summary>
  <div>
    <textarea readonly aria-label="HTML code" class="prism-live language-html"
      >{html}</textarea
    >
  </div>
</details>

<style>
  .popup {
    position: relative;
    color: #fff;
    z-index: 10;
    margin-inline-start: auto;

    @media (max-width: 895px) {
      align-self: flex-end;
    }
  }

  .popup summary {
    cursor: pointer;
    gap: var(--space-1);
    font-size: 0.8rem;
    font-weight: 700;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--bdrs-sm);
    user-select: none;
    display: inline-flex;
    background: var(--blue-700);
    align-items: center;
  }

  .popup summary::marker {
    content: none;
  }
  .popup summary::-webkit-details-marker {
    display: none;
  }

  .popup summary svg {
    /* inline-size: 1.25em;
    block-size: 1.25em; */
  }

  .popup[open] summary {
    background: var(--blue-900);
    box-shadow:
      inset 0 -1px 1px #fff3,
      inset 0px 1px 1px 1px #0000007d;
  }

  .popup summary + div {
    position: absolute;
    bottom: 100%;
    left: calc(var(--space-3) * -1);
    margin-block-end: var(--space-1);
    z-index: 10;
    touch-action: pan-x;
    filter: drop-shadow(0 1px 0.25px #fff3)
      drop-shadow(2px 4px 12px rgba(0, 0, 0, 0.2666666667))
      drop-shadow(0 1px 2px rgba(0, 0, 0, 0.0666666667));
  }

  .popup :global(pre) {
    margin-block: 0;
    -ms-overflow-style: none;
    scrollbar-width: none;
    padding-block: 0.75rem 1.35em;
    --r: 1rem;
    --h: 1rem;
    --p: 15%;
    padding: 0.75rem var(--r);
    border-bottom: var(--h) solid #0000;
    background-origin: border-box;
    background-color: var(--blue-700);
    --m: conic-gradient(
          from -45deg at var(--p) 100%,
          #0000,
          #000 1deg 90deg,
          #0000 91deg
        )
        0 100%/100% calc(100% - var(--r)) no-repeat,
      conic-gradient(
          at calc(var(--r) / 2) calc(var(--r) / 2),
          #000 270deg,
          #0000 0
        )
        0 0 / calc(100% - var(--r) / 2) calc(100% - var(--r) / 2) padding-box,
      radial-gradient(50% 50%, #000 98%, #0000) 0 0 / var(--r) var(--r) space
        padding-box;
    -webkit-mask: var(--m);
    mask: var(--m);
    inline-size: max-content;
    max-inline-size: 400px;

    @media (width < 900px) {
      --p: 82%;
    }
  }

  @media (max-width: 920px) {
    .popup summary + div {
      left: auto;
      right: -2rem;
    }
    .popup pre {
      --p: 88%;
    }
  }

  :global(.popup pre)::-webkit-scrollbar {
    display: none;
  }
</style>

<script>
  // Popup functionality - handles HTML code preview
  const popups = document.querySelectorAll(".popup");

  function dismiss(details: HTMLDetailsElement) {
    function handleClick({ target }: MouseEvent) {
      if (!(target as HTMLElement).closest("summary")) {
        details.open = false;
        details.querySelector("summary")!.style.pointerEvents = "auto";
        document.removeEventListener("click", handleClick);
      }
    }
    document.addEventListener("click", handleClick);
  }

  function updatePopupHTML(popup: HTMLDetailsElement) {
    const exercise = popup.closest("section");
    if (!exercise) return;

    const boxContainer = exercise.querySelector(".output .container");
    const popupTextarea = popup.querySelector(
      "textarea"
    ) as HTMLTextAreaElement;

    if (!boxContainer || !popupTextarea) {
      return;
    }

    // Check if this exercise has custom HTML (not just boxes)
    const output = exercise.querySelector(".output");
    const hasCustomHTML = output?.getAttribute("data-custom-html") === "true";

    if (hasCustomHTML) {
      // Don't update for custom HTML exercises
      return;
    }

    // Read actual DOM state - count only .box elements
    const boxes = boxContainer.querySelectorAll(
      ":scope > .box, :scope > [class*='box-']"
    );
    const currentBoxCount = boxes.length;

    const boxHTML = Array.from(
      { length: currentBoxCount },
      (_, index) => `<div class="box box-${index + 1}">.box-${index + 1}</div>`
    ).join("\n\t");
    const htmlContent = `<div class="container">\n\t${boxHTML}\n</div>`;
    popupTextarea.value = htmlContent;

    // Trigger input event to update Prism highlighting
    popupTextarea.dispatchEvent(new Event("input", { bubbles: true }));
  }

  popups.forEach((popup) => {
    // Use toggle event to update HTML when popup opens
    popup.addEventListener("toggle", (e) => {
      const details = e.target as HTMLDetailsElement;
      if (details.open) {
        updatePopupHTML(details);
        dismiss(details);
        details.querySelector("summary")!.style.pointerEvents = "none";
      }
    });
  });
</script>
